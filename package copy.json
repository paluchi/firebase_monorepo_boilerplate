{
  "name": "myapp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build-web-app": "cd packages/web-app && npm run build",
    "start-web-app": "cd packages/web-app && npm start",
    "build-firebase-functions": "tsc -b packages/api",
    "start-firebase-emulator": "npm run build-firebase-functions -- --watch | firebase emulators:start --only functions,firestore,auth",
    "dev": "concurrently \"npm run start-firebase-emulator\" \"npm run start-web-app\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "firebase": "^10.12.2",
    "firebase-admin": "^12.2.0",
    "firebase-tools": "^13.11.4",
    "typescript": "^4.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
