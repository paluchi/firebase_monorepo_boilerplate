{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "composite": true,
    "declaration": true,
    "paths": {
      "@myapp/core": ["../core/lib"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "references": [
    { "path": "../core" }
  ]
}