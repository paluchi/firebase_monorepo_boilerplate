{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "paths": {
      "@repo/core/*": ["../core/src/*"],
      "@repo/adapters/*": ["../adapters/src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "references": [
    { "path": "../core" },
    { "path": "../adapters" }
  ]
}