{
  "source": ".",
  "functions": [
    {
      "source": "./packages/api",
      "codebase": "api",
      "runtime": "nodejs20",
      "ignore": ["node_modules", ".git", "*.local"],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
      "isolate": true
    }
  ],
  "firestore": {
    "rules": "./packages/database/firestore.rules",
    "indexes": "./packages/database/firestore.indexes.json"
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5000
    },
    "auth": {
      "port": 9099,
      "enabled": false
    }
  }
}
