{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@todo/core/*": ["../../packages/core/src/*"],
      "@todo/adapters/*": ["../../packages/adapters/src/*"]
    }
  },
  "ts-node": { "esm": true },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "references": [
    { "path": "../../../packages/core" },
    { "path": "../../../packages/adapters" }
  ]
}